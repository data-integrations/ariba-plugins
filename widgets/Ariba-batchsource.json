{
  "metadata": {
    "spec-version": "1.5"
  },
  "display-name": "SAP Ariba",
  "configuration-groups": [
    {
      "label": "Basic",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName",
          "widget-attributes": {
            "placeholder": "Used to uniquely identify this source for lineage, annotating metadata etc."
          }
        },
        {
          "widget-type": "textbox",
          "label": "View Template Name",
          "name": "viewTemplateName",
          "widget-attributes": {
            "placeholder": "Name of the view template from which data is to be extracted, for example, RequestFactSystemView."
          }
        },
        {
          "label": "browse",
          "widget-type": "connection-browser",
          "widget-category": "plugin",
          "widget-attributes": {
            "connectionType": "ARIBA",
            "label": "Browse"
          }
        }
      ]
    },
    {
      "label": "Connection",
      "properties": [
        {
          "widget-type": "toggle",
          "label": "Use connection",
          "name": "useConnection",
          "widget-attributes": {
            "on": {
              "value": "true",
              "label": "YES"
            },
            "off": {
              "value": "false",
              "label": "NO"
            },
            "default": "false"
          }
        },
        {
          "widget-type": "connection-select",
          "label": "Connection",
          "name": "connection",
          "widget-attributes": {
            "connectionType": "Ariba"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Ariba Client ID",
          "name": "clientId",
          "widget-attributes": {
            "placeholder": "Ariba Client ID"
          }
        },
        {
          "widget-type": "password",
          "label": "Ariba Client Secret",
          "name": "clientSecret",
          "widget-attributes": {
            "placeholder": "Ariba Client Secret"
          }
        },
        {
          "widget-type": "password",
          "label": "Ariba API Key",
          "name": "apiKey",
          "widget-attributes": {
            "placeholder": "Use any Application Key of an Application(s) you created in developer portal."
          }
        },
        {
          "widget-type": "textbox",
          "label": "API Endpoint",
          "name": "baseURL",
          "widget-attributes": {
            "placeholder": "Base path of the Ariba API, for example, https://sandbox.api.sap.com"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Realm",
          "name": "realm",
          "widget-attributes": {
            "placeholder": "Realm name from which the data is to be extracted, for example, S4VALL."
          }
        },
        {
          "widget-type": "radio-group",
          "label": "System Type",
          "name": "systemType",
          "widget-attributes": {
            "layout": "inline",
            "default": "prod",
            "options": [
              {
                "id": "prod",
                "label": "Production"
              },
              {
                "id": "sandbox",
                "label": "Sandbox"
              }
            ]
          }
        }
      ]
    },
    {
      "label": "Advanced",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "From Date",
          "name": "fromDate",
          "widget-attributes": {
            "placeholder": "Start date of the extraction, for example, 2021-12-01T00:00:00Z."
          }
        },
        {
          "widget-type": "textbox",
          "label": "To Date",
          "name": "toDate",
          "widget-attributes": {
            "placeholder": "End date of the extraction, for example, 2022-03-29T00:00:00Z."
          }
        }
      ]
    }
  ],
  "filters": [
    {
      "name": "showConnectionProperties ",
      "condition": {
        "expression": "useConnection == false"
      },
      "show": [
        {
          "type": "property",
          "name": "clientId"
        },
        {
          "type": "property",
          "name": "clientSecret"
        },
        {
          "type": "property",
          "name": "apiKey"
        },
        {
          "type": "property",
          "name": "baseURL"
        },
        {
          "type": "property",
          "name": "realm"
        },
        {
          "type": "property",
          "name": "systemType"
        }
      ]
    },
    {
      "name": "showConnectionId",
      "condition": {
        "expression": "useConnection == true"
      },
      "show": [
        {
          "type": "property",
          "name": "connection"
        }
      ]
    }
  ]
}
